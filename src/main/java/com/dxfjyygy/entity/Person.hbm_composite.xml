<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--双向1-N -->
<hibernate-mapping package="com.dxfjyygy.entity">
    <class name="Person" table="t_person">
        <id name="id" column="person_id">
            <!--基于主键关联时，主键生成策略是foreign,表明根据关联类的主键来生成该实体的主键-->
           <generator class="native" />
        </id>
        <property name="name"  type="java.lang.String"/>
        <property name="age"  type="java.lang.Integer"/>
       <!--下面映射关于无连接表的双向一对N关联
        没有指定cascade属性，指定不控制关联关系
       -->
        <component name="nameObj" class="Name">
            <property name="firstName"></property>
            <property name="lastName"></property>
            <property name="nickName"></property>
        </component>
        <component name="nameObj1" class="Name">
            <property name="firstName"></property>
            <property name="lastName"></property>
            <property name="nickName"></property>
        </component>
        <set name="addresses" inverse="true"  cascade="save-update" >
            <key column="person_id" />
            <one-to-many class="Address"  />
        </set>
    </class>

</hibernate-mapping>

